<link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.5.95/css/materialdesignicons.min.css">
<div class="sidenav">
  <h2 class="hellouser">
    Hello, <%= @parent.name %> <%= @parent.surname %>!
  </h2>
  <div class="navcontent">
    <a href="/parents/<%= @parent.id %>"><span class = "mdi mdi-view-dashboard"> Dashboard</span></a>
    <a class="active" href="/parents/<%= @parent.id %>/show_marks"><span class = 'mdi mdi-school'> Marks</span></a>
  </div>
</div>
<div class="main">
  <%= form_tag('./show_marks/switch_child', remote: true, model: @parent) do %>
    <%= label_tag(:student, "Select your child")%>
    <%= select_tag :student_select, options_for_select(@students.map{|s| [s.to_s, s.id]}), prompt: "Select a student  "%>
  <% end %>
  <br/>
  <table id="marks_table">
    <thead>
    <tr>
      <th>Mark</th>
      <th colspan="3">Subject</th>
    </tr>
    </thead>
    <tbody>
      <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.mark %></td>
        <td><%= mark.subject %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
