    $.ajax({
              type: 'POST',
              url: "/parents/<%=@parent.id%>/notes/" + "<%= @student.id %>" + "/subjects/" + "<%= tab_notes.subject %>", 
              contentType: "text/javascript",
          }).done(function(response){
            });
});
</script>
