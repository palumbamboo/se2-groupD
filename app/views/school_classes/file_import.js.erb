if("<%= @message %>" == "ok"){
    $("#error_message").css("display", "none");
    $("#success_message").html("Class successfully updated. The updated class will be shown in few seconds.");
    $("#success_message").css("display", "block");
    $("#file-confirm").attr("disabled", true);
    setTimeout(function(){
        window.open("/officers/" + "<%= @officer.id %>" + "/class_composition/" + "<%= @school_class.id %>", "_self");
        }, 3000);
}
else{
    $("#error_message").html("<%= @message %>");
    $("#error_message").css("display", "block");
}