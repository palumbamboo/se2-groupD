<div class="login-content">
  <div class="login-header">
    <div class="avatar">
      <img src="<%= image_url('lock.png') %>" alt="Avatar">
    </div>
    <h4 class="login-title">Please update your password</h4>
  </div>
  <div class="login-body">
    <%= form_with(model: current_user, url: edit_password_path) do |f| %>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "New Password", required: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your Password", required: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block login-btn" %>
      </div>
    <% end %>
  </div>
</div>