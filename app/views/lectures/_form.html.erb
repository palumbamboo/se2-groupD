<%= form_with(model: @lecture) do |f| %>
  <div>
    <%= f.label "Teacher: #{@teacher.to_s}" %>
  </div>
  <div>
    <%= f.label "Lecture name"%>
    <%= f.text_field :name %>
  </div>
  <br />
  <div>
    <%= f.label "Subject" %>
    <%= f.select :subject, @teacher.subjects %>
  </div>
  <br/>
  <div>
    <%= f.label "Lecture topic"%>
    <%= f.text_field :topics %>
  </div>
  <br />
  <div>
    <% if @lecture.school_class %>
      <%= f.label "School class: #{@lecture.school_class.class_to_s}" %>
    <% else %>
      <%= f.label :school_class %>
      <%= f.select :school_class_id, @teacher.school_classes.map{ |c| [c.class_to_s, c.id]} %>
    <% end %>
  </div>
  <br />
  <br /><br />
  <%= f.hidden_field :teacher_id, value: @teacher.id %>
  <div>
    <%= f.submit %>
  </div>
<% end %>
