<%= form_with(model: @lecture) do |f| %>
  <div>
    <%= f.label "Teacher: #{@teacher.to_s}" %>
  </div>
  <div>
    <%= f.label "Lecture name"%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <br />
  <div>
    <%= f.label "Subject" %>
    <%= f.select :subject, @teacher.subjects, {}, :class => 'custom-select' %>
  </div>
  <br/>
  <div>
    <%= f.label "Lecture topic"%>
    <%= f.text_field :topics, class: 'form-control' %>
  </div>
  <br />
  <div>
    <% if @lecture.school_class %>
      <%= f.label "School class: #{@lecture.school_class.class_to_s}" %>
    <% else %>
      <%= f.label :school_class %>
      <%= f.select :school_class_id, @teacher.school_classes.map{ |c| [c.class_to_s, c.id]}, {}, { :class => 'custom-select'} %>
    <% end %>
  </div>
  <br />
  <br /><br />
  <%= f.hidden_field :teacher_id, value: @teacher.id %>
  <div class="row">
    <div class="col-md-4"></div>
      <div class="col-md-4">
        <%= f.submit :class => 'btn btn-success'%>
      </div>
  </div>
<% end %>
