<link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.5.95/css/materialdesignicons.min.css">
<div class="sidenav">
  <h2 class="hellouser">
    Hello, <%= @teacher.to_s %>!
  </h2>
  <div class="navcontent">
    <%= link_to "<span class = 'mdi mdi-view-dashboard'> Home</span>".html_safe, teacher_path(@teacher) %>
    <%= link_to "<span class = 'mdi mdi-teach'> Lectures</span>".html_safe, teacher_lectures_url  %>
    <%= link_to "<span class = 'mdi mdi-bookmark'> Marks</span>".html_safe, teacher_marks_url, class: 'active' %>
  </div>
</div>

<div class="main">
  <table id="marks">
    <thead>
    <tr>
      <th>Teacher</th>
      <th>Mark</th>
      <th>Subject</th>
      <th>Student</th>
      <th>Mark date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody id="marks-body">
    <%= render partial: 'mark', collection: @marks.sort_by(&:mark) %>
    </tbody>
  </table>

  <div id="new-mark">
    <%= link_to "Create mark", new_mark_path(params: { teacher_id: @teacher.id }), remote: true %>
  </div>
</div>

