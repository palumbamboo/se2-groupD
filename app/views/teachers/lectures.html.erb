<% content_for :sidebar do %>
  <div class="sidebar-header">
    <h3>Welcome <%= @teacher.to_s %>!</h3>
  </div>

  <ul class="list-unstyled components">
    <p>Teacher page</p>
    <li><%= link_to " Home", teacher_path(@teacher), class: 'mdi mdi-view-dashboard' %></li>
    <li class="active"><%= link_to " Lectures", teacher_lectures_url, class:'mdi mdi-teach' %></li>
    <li><%= link_to " Marks", teacher_marks_url, class: 'mdi mdi-bookmark' %></li>
  </ul>
  <% if user_signed_in? %>
    <ul class="list-unstyled components">
      <li><%= button_to destroy_user_session_path, method: :delete, id: 'logout-button', :form => { :id => "logout-form" } do %>
          <i class="mdi mdi-logout"></i> Logout
        <% end %>
      </li>
    </ul>
  <% end %>
<% end %>

<% content_for :navbar do %>
    <%= link_to " Create lecture", new_lecture_path(params: { teacher_id: @teacher.id }), class: "btn btn-success mdi mdi-plus-circle", id: "lecture-new",remote: true %>
<% end %>

<table id="lectures">
  <thead>
  <tr>
    <th>Lecture</th>
    <th>Subject</th>
    <th>Class</th>
    <th>Topics</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody id="lectures-body">
  <%= render partial: 'lecture', collection: @lectures.sort_by(&:start_time) %>
  </tbody>
</table>

<div id="new-lecture">
</div>
