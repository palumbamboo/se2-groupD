<%= form_with(model: @teacher) do |f| %>
  <div>
    <%= f.label "Teacher"%>
  </div>
  <div>
    <%= f.label "Name"%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <br />
  <div>
    <%= f.label "Surname"%>
    <%= f.text_field :surname, class: 'form-control' %>
  </div>
  <br />
  <div>
    <%= f.label "E-mail"%>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <br />
  <div>
    <!--    Not mandatory-->
    <%= f.label "School classes"%>
    <%= f.text_field :school_classes, class: 'form-control' %>
  </div>
  <br />
  <div>
    <!--    Not mandatory-->
    <%= f.label "Subjects"%>
    <%= f.text_field :subject, class: 'form-control' %>
  </div>
  <br />
  <br /><br />
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= f.submit :class => 'btn btn-success'%>
    </div>
  </div>
<% end %>
