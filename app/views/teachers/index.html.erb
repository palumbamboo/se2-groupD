<h1>All teachers!</h1>
<div>
<table border="3">
  <tr>
    <th>Name</th>
    <th>Subjects</th>
    <th></th>
  </tr>

  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.to_s %></td>
      <td><%= teacher.subjects.map(&:to_s).join(', ') %></td>
      <td><%= link_to '<button>Show</button>'.html_safe, teacher_path(teacher), :class => 'btn btn-default' %></td>
    </tr>
  <% end %>
</table>
</div>