if("<%= @message %>" == "ok"){
    $("#error_message").css("display", "none");
    $("#success_message").html("Timetable successfully updated. The updated timetable will be shown in few seconds.");
    $("#success_message").css("display", "block");
    $("#file-confirm").attr("disabled", true);
    setTimeout(function(){
        $.ajax({
                type: 'GET',
                url: "timetables/" + "<%= @school_class.id %>",
                contentType: "text/javascript"
                }).done(function(){
                    $("#back").css("display", "none");
                })
        }, 3000);
}
else{
    $("#error_message").html("<%= @message %>");
    $("#error_message").css("display", "block");
}